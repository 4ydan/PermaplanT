pipeline {
    agent { label 'permaplant' }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh './ci/build-scripts/build-backend.sh'
                sh './ci/build-scripts/build-frontend.sh'
                stash includes: './backend/target/release/backend', name: 'backend'
            }
        }

        stage('Deploy to Dev') {
            when {
                branch "master"
            }

            steps {
                unstash 'backend'
                echo 'Deploying to Dev ...'
            }
        }
    }
}
